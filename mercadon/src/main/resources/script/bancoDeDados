------- CRIANDO TABELA MERCADOS_FAVORITOS, FK E SEQUENCE -----------------------

CREATE TABLE MERCADOS_FAVORITOS (
    MEF_MERCADO NUMBER(18) NOT NULL PRIMARY KEY,
    MEF_FAVORITOS NUMBER(18) NOT NULL PRIMARY KEY,
    CONSTRAINT FK_MEF_MERCADO FOREIGN KEY (FK_MEF_MERCADO) REFERENCES PESSOAJURIDICA(PEJ_CODIGO),
    CONSTRAINT FK_MEF_FAVORITOS FOREIGN KEY (FK_MEF_FAVORITOS) REFERENCES FAVORITOS(FAV_CODIGO)
);

CREATE SEQUENCE SEQ_MERCADOS_FAVORITOS
START WITH 1
INCREMENT BY 1;

