---------------- CRIANDO TABELA FORMAPAGAMENTO, FK E SEQUENCE ------------------

CREATE TABLE FORMAPAGAMENTO (
    FOR_CODIGO NUMBER(18) NOT NULL PRIMARY KEY,
    FOR_PAGAMENTO VARCHAR2(255)
    FOR_PEDIDOS_APROVADOS NUMBER(18) NOT NULL,
    CONSTRAINT FK_FOR_PEDIDOS_APROVADOS FOREIGN KEY (FK_FOR_PEDIDOS_APROVADOS) REFERENCES PEDIDO(PED_CODIGO)
);

CREATE SEQUENCE SEQ_FORMAPAGAMENTO
START WITH 1
INCREMENT BY 1;

