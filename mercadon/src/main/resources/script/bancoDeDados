--------- CRIANDO TABELA FAVORITOS, FK E SEQUENCE ------------------------------

CREATE TABLE FAVORITOS (
    FAV_CODIGO NUMBER(18) NOT NULL PRIMARY KEY,
    FAV_HISTORICODECOMPRAS NUMBER(18),
    CONSTRAINT FK_FAV_HISTORICODECOMPRAS FOREIGN KEY (FK_FAV_HISTORICODECOMPRAS) REFERENCES HISTORICODECOMPRAS (HDC_CODIGO)
);

CREATE SEQUENCE SEQ_FAVORITOS
START WITH 1
INCREMENT BY 1;

